<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/toolLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/shareBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공유"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="320dp"
            android:textColor="@color/darkGreen"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/bookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도서명"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@null"/>
                <EditText
                    android:id="@+id/reportName"
                    android:layout_width="380dp"
                    android:layout_height="40dp"
                    android:hint="독후감명"/>
                <LinearLayout
                    android:id="@+id/hashLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/hashTag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="# 해시태그"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/basicGreen"/>
                    <TextView
                        android:id="@+id/hashTag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/basicGreen"/>
                    <TextView
                        android:id="@+id/hashTag3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/basicGreen"/>
                    <TextView
                        android:id="@+id/hashTag4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/basicGreen"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgSearchBookCover"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="200dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/imgDeleteBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:text="X"
                    android:visibility="invisible"
                    android:background="@null"/>
                <EditText
                    android:id="@+id/contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="내용을 입력하세요"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/basicGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">
        <ImageView
            android:id="@+id/bookSearchIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/searchbook"
            android:title="도서선택"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/addImgIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_insert_photo_24"
            android:title="사진 선택"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/hashTagIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hashtag"
            android:title="해시태그"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/keyIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_lock_open_24dp"
            android:title="공개"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>