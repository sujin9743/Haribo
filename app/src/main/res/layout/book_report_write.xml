<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/toolLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공유"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="310dp"
            android:textColor="@color/darkGreen"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도서 제목"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:hint="제목"/>
            <LinearLayout
                android:id="@+id/hashLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/hashTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#임시"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/basicGreen"/>
                <TextView
                    android:id="@+id/hashTag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#임시해"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/basicGreen"/>
                <TextView
                    android:id="@+id/hashTag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#임시해시태그"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/basicGreen"/>
                <TextView
                    android:id="@+id/hashTag4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#임시해시태그"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/basicGreen"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="별이 가득한 여름밤에 우리 눈부시게 아름다운 그림, 모든게 다 바래다 지워져도 간직하고 있을게 내 눈을 보면서 넌 어떤 생각해 나는 별 보면서 널 생각해 넌 알 수 있겠니 지금 우리 사이 세상에서 제일 특별해 별이 가득한 여름밤에 우리 눈부시게 아름다운 그림 다시 그 날이 오면 "/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/testimg"/>

            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bookReportbtm"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/basicGreen"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:itemIconSize="25dp"
        app:menu="@menu/m_bookreport_btm_naviga"/>

<FrameLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="@id/bookReportbtm"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>