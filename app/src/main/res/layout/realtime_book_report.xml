<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/toolLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/serchBtn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_search_24"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="330dp"            />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/toolLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <LinearLayout
                android:id="@+id/forScrollLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/profileLayout"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_gravity="center">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <TextView
                        android:id="@+id/profileText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="Dorothy"
                        android:textSize="25sp"
                        android:layout_margin="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/viewPageLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/bookImgPage"
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@color/testColor">
                </androidx.viewpager.widget.ViewPager>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bottomLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/bookImgPage"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <TextView
                        android:id="@+id/bookName"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="도서제목 |"
                        android:textSize="20sp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="3dp"/>
                    <TextView
                        android:id="@+id/bookCreator"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text=" 도서제목"
                        android:textSize="20sp"
                        android:layout_marginTop="3dp"/>
                    <ImageView
                        android:id="@+id/Heart"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/heart_full"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="60dp"/>
                    <TextView
                        android:id="@+id/likeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="170"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="4dp"
                        android:textSize="20sp" />
                    <LinearLayout
                        android:id="@+id/commentLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="댓글"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="13dp"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/commentCnt"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="3dp"
                        android:text="200"
                        android:textSize="20sp"
                        />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/profileLayout2"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/bottomLayout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImg2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_gravity="center">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <TextView
                        android:id="@+id/profileText2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="Dorothy"
                        android:textSize="25sp"
                        android:layout_margin="10dp"/>
                </LinearLayout>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/bookImgPage2"
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@color/testColor">
                </androidx.viewpager.widget.ViewPager>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/bookImgPage2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <TextView
                        android:id="@+id/bookName2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="도서제목 |"
                        android:textSize="20sp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="3dp"/>
                    <TextView
                        android:id="@+id/bookCreator2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text=" 도서제목"
                        android:textSize="20sp"
                        android:layout_marginTop="3dp"/>
                    <ImageView
                        android:id="@+id/binHeart2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/heart_line"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="60dp"/>
                    <TextView
                        android:id="@+id/likeCount2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="170"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="4dp"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="댓글"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="13dp"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/commentCnt2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:text="200"
                        android:textSize="20sp" />

                </LinearLayout>



            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/addBookReport"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/feather"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="60dp"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/userRc_bnv"
            style="@style/Bnv_Style"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>


