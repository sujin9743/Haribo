<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_marginLeft="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/profileText"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="Dorothy"
            android:textSize="25sp"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/viewPageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileLayout">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/bookImgPage"
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/testColor">
        </androidx.viewpager.widget.ViewPager>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/heart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/heart_full"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/likeCnt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:text="170"
            android:textSize="20sp" />
        <LinearLayout
            android:id="@+id/commentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="댓글"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="13dp"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/commentCnt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:text="200"
                android:textSize="20sp"/>
        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/viewPageLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="도서제목 |"
            android:textSize="20sp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/bookCreator"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=" 도서제목"
            android:textSize="20sp"
            android:layout_marginTop="3dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>