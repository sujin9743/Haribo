<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/allLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/toolLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/justLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/bookImage"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"/>
                <TextView
                    android:id="@+id/bookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text=""
                    android:hint="임시 도서명"
                    android:textSize="18sp"
                    android:textColor="@color/darkGreen" />

            </LinearLayout>

                    <RatingBar
                        android:id="@+id/star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/justLayout"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                            android:id="@+id/reviewBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="리뷰 남기기"
                            android:textSize="15sp"
                            android:textColor="@color/darkGreen"
                            android:layout_marginRight="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/justLayout"
                            app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/beige"
                   android:layout_marginTop="10dp">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="10dp"
                       android:orientation="vertical">
                       <TextView
                           android:id="@+id/editor"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="15sp"
                           android:textColor="@color/darkGray"
                           android:layout_margin="5dp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_margin="5dp"
                           android:text="책소개"
                           android:textColor="@color/black"
                           android:textSize="18dp"/>
                       <TextView
                           android:id="@+id/bookInfo"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_margin="5dp"
                           android:textColor="@color/darkGray"
                           android:textSize="15dp"/>

                   </LinearLayout>
               </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reviewLayout"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/beige">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:id="@+id/letsGoReport"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="55dp"
            android:background="@color/beige">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="독후감 보러가기"
                android:layout_margin="5dp"
                android:textColor="@color/darkGreen"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/letsgo_bookreport"
                android:layout_marginLeft="270dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/userRc_bnv"
        style="@style/Bnv_Style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>